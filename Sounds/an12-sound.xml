    <!-- Rumble on runway -->

    <rumble>
      <name>rumble1</name>
      <mode>looped</mode>
      <path>Aircraft/AN-12BK/Sounds/24roll.wav</path>
      <condition>
          <property>/gear/gear[0]/wow</property>
      </condition>
      <volume>
        <property>sim/multiplay/generic/float[13]</property>
        <type>log</type>
        <factor>0.25</factor>
	<min>0.0</min>
        <max>0.5</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>3000</max-dist>
    </rumble>
    
    <rumble>
      <name>rumble2</name>
      <mode>looped</mode>
      <path>Aircraft/AN-12BK/Sounds/24roll.wav</path>
      <condition>
        <or>          
          <property>/gear/gear[1]/wow</property>
          <property>/gear/gear[2]/wow</property>
        </or>
      </condition>
      <volume>
        <property>sim/multiplay/generic/float[13]</property>
        <type>log</type>
        <factor>0.25</factor>
	<min>0.0</min>
        <max>0.5</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>3000</max-dist>
    </rumble>

    <!-- Gear in and out -->
    
