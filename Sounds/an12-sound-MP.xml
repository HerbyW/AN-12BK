<PropertyList>

  <fx>

  <!-- Engines 1 -4 starting up-->
    <crank>
      <name>engstart1</name>
      <path>Aircraft/AN-12BK/Sounds/starter.wav</path>
       <condition>       
         <property>sim/multiplay/generic/int[12]</property>         
        </condition>      
      <volume>
        <offset>-0.45</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>500</max-dist>
    </crank>
    
    <crank>
      <name>engstart2</name>
      <path>Aircraft/AN-12BK/Sounds/starter.wav</path>
       <condition>       
         <property>sim/multiplay/generic/int[13]</property>         
        </condition>      
      <volume>
        <offset>-0.45</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>500</max-dist>
      <delay-sec>0</delay-sec>
    </crank>
    
    <crank>
      <name>engstart3</name>
      <path>Aircraft/AN-12BK/Sounds/starter.wav</path>
       <condition>       
         <property>sim/multiplay/generic/int[14]</property>         
        </condition>      
      <volume>
        <offset>-0.45</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>500</max-dist>
      <delay-sec>0</delay-sec>
    </crank>
    
    <crank>
      <name>engstart4</name>
      <path>Aircraft/AN-12BK/Sounds/starter.wav</path>
       <condition>       
         <property>sim/multiplay/generic/int[15]</property>         
        </condition>      
      <volume>
        <offset>-0.45</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>500</max-dist>
      <delay-sec>0</delay-sec>
    </crank>
  
  <!-- Engines 1 -4 running -->

    <engine>
       <name>engine0</name>
      <mode>looped</mode>
      <path>Aircraft/AN-12BK/Sounds/running.wav</path>      
        <condition>       
         <property>sim/multiplay/generic/int[12]</property>         
        </condition>  
      <volume>
        <property>/engines/engine[0]/rpm</property>
        <factor>0.00034</factor>
        <min>0.15</min>
        <max>0.85</max>        
      </volume>
      <pitch>
        <property>/engines/engine[0]/rpm</property>
        <factor>0.00008</factor>
        <min>0.0</min>
        <max>0.2</max>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>10000</max-dist>
      <delay-sec>17</delay-sec>
    </engine>
    
    <engine>
       <name>engine1</name>
      <mode>looped</mode>
      <path>Aircraft/AN-12BK/Sounds/running.wav</path>      
        <condition>       
         <property>sim/multiplay/generic/int[13]</property>         
        </condition>  
      <volume>
        <property>/engines/engine[1]/rpm</property>
        <factor>0.00034</factor>
        <min>0.15</min>
        <max>0.85</max>        
      </volume>
      <pitch>
        <property>/engines/engine[1]/rpm</property>
        <factor>0.00008</factor>
        <min>0.0</min>
        <max>0.2</max>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>10000</max-dist>
      <delay-sec>17</delay-sec>
    </engine>
    
    <engine>
       <name>engine2</name>
      <mode>looped</mode>
      <path>Aircraft/AN-12BK/Sounds/running.wav</path>      
        <condition>       
         <property>sim/multiplay/generic/int[14]</property>         
        </condition>  
      <volume>
        <property>/engines/engine[2]/rpm</property>
        <factor>0.00034</factor>
        <min>0.15</min>
        <max>0.85</max>       
      </volume>
      <pitch>
        <property>/engines/engine[2]/rpm</property>
        <factor>0.00008</factor>
        <min>0.0</min>
        <max>0.2</max>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>10000</max-dist>
      <delay-sec>17</delay-sec>
    </engine>
    
    <engine>
       <name>engine3</name>
      <mode>looped</mode>
      <path>Aircraft/AN-12BK/Sounds/running.wav</path>      
        <condition>       
         <property>sim/multiplay/generic/int[15]</property>         
        </condition>  
      <volume>
        <property>/engines/engine[3]/rpm</property>
        <factor>0.00034</factor>
        <min>0.15</min>
        <max>0.85</max>        
      </volume>
      <pitch>
        <property>/engines/engine[3]/rpm</property>
        <factor>0.00008</factor>
        <min>0.0</min>
        <max>0.2</max>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>10000</max-dist>
      <delay-sec>17</delay-sec>
    </engine>
    
    <!-- Rumble on runway -->

    <rumble>
      <name>rumble1</name>
      <mode>looped</mode>
      <path>Aircraft/AN-12BK/Sounds/24roll.wav</path>
      <condition>
          <property>/gear/gear[0]/wow</property>
      </condition>
      <volume>
        <property>sim/multiplay/generic/float[13]</property>
        <type>log</type>
        <factor>0.25</factor>
	<min>0.0</min>
        <max>0.15</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>3000</max-dist>
    </rumble>
    
    <rumble>
      <name>rumble2</name>
      <mode>looped</mode>
      <path>Aircraft/AN-12BK/Sounds/24roll.wav</path>
      <condition>
        <or>          
          <property>/gear/gear[1]/wow</property>
          <property>/gear/gear[2]/wow</property>
        </or>
      </condition>
      <volume>
        <property>sim/multiplay/generic/float[13]</property>
        <type>log</type>
        <factor>0.25</factor>
	<min>0.0</min>
        <max>0.15</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>3000</max-dist>
    </rumble>

    <!-- Gear in and out -->
    
    <gear>
      <name>gear</name>
      <mode>in-transit</mode>
      <path>Aircraft/AN-12BK/Sounds/gear.wav</path>
      <property>/gear/gear[0]/position-norm</property>
      <volume>
        <factor>0.5</factor>
      </volume>
      <reference-dist>500</reference-dist>
      <max-dist>2000</max-dist>
    </gear>

    <gear>
     <name>gear-lock</name>
     <path>Aircraft/AN-12BK/Sounds/gear-lck.wav</path>
     <condition>
       <greater-than>
         <property>/gear/gear[0]/position-norm</property>
         <value>0.96</value>
       </greater-than>
     </condition>
     <volume>
        <factor>0.5</factor>
      </volume>
      <reference-dist>500</reference-dist>
      <max-dist>2000</max-dist>
    </gear>

    <!-- Touchdown -->
    
    <squeal>
      <name>squeal1</name>
      <mode>once</mode>
      <path>Aircraft/AN-12BK/Sounds/squeal.wav</path>
      <condition>        
          <property>sim/multiplay/generic/int[16]</property>                 
      </condition>
        <volume>
        <factor>0.15</factor>
      </volume>
      <reference-dist>1000</reference-dist>
      <max-dist>5000</max-dist>
    </squeal>
    
    <squeal>
      <name>squeal2</name>
      <mode>once</mode>
      <path>Aircraft/AN-12BK/Sounds/squeal.wav</path>
      <condition>        
          <property>sim/multiplay/generic/int[18]</property>          
      </condition>
        <volume>
        <factor>0.15</factor>
      </volume>
      <reference-dist>1000</reference-dist>
      <max-dist>5000</max-dist>
    </squeal>
 
 <!-- Flaps -->
 
    <flap>
      <name>flaps</name>
      <mode>in-transit</mode>
      <path>Aircraft/AN-12BK/Sounds/flaps.wav</path>
      <property>/surface-positions/flap-pos-norm</property>
      <volume>
        <factor>0.35</factor>
      </volume>
      <reference-dist>500</reference-dist>
      <max-dist>2000</max-dist>
    </flap>
    
  <!-- Doors -->
  
    <door>
      <name>Crew doorT</name>
      <mode>in-transit</mode>
      <path>Aircraft/AN-12BK/Sounds/door_close.wav</path>
      <condition>
       <and>
	<greater-than>
          <property>sim/multiplay/generic/float[0]</property>
          <value>0.01</value>
        </greater-than>
	<less-than>
          <property>sim/multiplay/generic/float[0]</property>
          <value>0.99</value>
        </less-than>
       </and>
      </condition>
      <volume>
        <factor>0.11</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>2000</max-dist>
    </door>
    
    <door>
      <name>Crew door</name>
      <path>Aircraft/AN-12BK/Sounds/door_closed.wav</path>
      <condition>
        <equals>
          <property>sim/multiplay/generic/float[0]</property>
          <value>0.0</value>
        </equals>
      </condition>
      <volume>
        <factor>0.35</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>2000</max-dist>
    </door>

    <door>
      <name>Passenger doorT</name>
      <mode>in-transit</mode>
      <path>Aircraft/AN-12BK/Sounds/door_close.wav</path>
      <condition>
       <and>
	<greater-than>
          <property>sim/multiplay/generic/float[12]</property>
          <value>0.01</value>
        </greater-than>
	<less-than>
          <property>sim/multiplay/generic/float[12]</property>
          <value>0.99</value>
        </less-than>
       </and>
      </condition>
      <volume>
        <factor>0.12</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>2000</max-dist>
    </door>
    
    <door>
      <name>Passenger door</name>
      <path>Aircraft/AN-12BK/Sounds/door_closed.wav</path>
      <condition>
        <equals>
          <property>sim/multiplay/generic/float[12]</property>
          <value>0.0</value>
        </equals>
      </condition>
      <volume>
        <factor>0.35</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>2000</max-dist>
    </door>

        <!-- Wind -->



  </fx>

</PropertyList>