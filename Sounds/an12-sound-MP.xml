    <engine12r>
      <name>engine12r</name>
      <mode>looped</mode>
      <path>Aircraft/AN-12BK/Sounds/Antonov22Antei-PARADISE-Views-reverse-left.wav</path>      
      <condition>
	<and>
	  <or>
	    <property>sim/multiplay/generic/int[12]</property>
	    <property>sim/multiplay/generic/int[13]</property>
	  </or>
	  <property>sim/multiplay/generic/int[6]</property>
	</and>
      </condition>  
      <volume>
	<property>sim/multiplay/generic/float[8]</property>
	<factor>0.55</factor>
	<offset>0.1</offset>       
      </volume>
      <position>
        <x>-1.95</x>
        <y>-9.57</y>
        <z>-1.57</z>
      </position>
      <reference-dist>100</reference-dist>
      <max-dist>10000</max-dist>
    </engine12r>
    
    <engine34l>
      <name>engine34l</name>
      <mode>looped</mode>
      <path>Aircraft/AN-12BK/Sounds/Antonov22Antei-PARADISE-Views-reverse-right.wav</path>      
      <condition>
	<and>
	  <or>
	    <property>sim/multiplay/generic/int[14]</property>
	    <property>sim/multiplay/generic/int[15]</property>
	  </or>
	  <property>sim/multiplay/generic/int[6]</property>
	</and>
      </condition>  
      <volume>
	<property>sim/multiplay/generic/float[11]</property>
	<factor>0.55</factor>
	<offset>0.1</offset>      
      </volume>
      <position>
        <x>-1.95</x>
        <y> 9.57</y>
        <z>-1.57</z>
      </position>
      <reference-dist>100</reference-dist>
      <max-dist>10000</max-dist>
    </engine34l>
    
    <!-- Rumble on runway -->

    <rumble>
      <name>rumble1</name>
      <mode>looped</mode>
      <path>Aircraft/AN-12BK/Sounds/24roll.wav</path>
      <condition>
          <property>sim/multiplay/generic/int[16]</property>
      </condition>
      <volume>
        <property>sim/multiplay/generic/float[13]</property>
        <type>log</type>
        <factor>0.18</factor>
	<min>0.0</min>
        <max>0.45</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>3000</max-dist>
    </rumble>
    
    <rumble>
      <name>rumble2</name>
      <mode>looped</mode>
      <path>Aircraft/AN-12BK/Sounds/24roll.wav</path>
      <condition>
        <or>          
          <property>sim/multiplay/generic/int[18]</property>
          <property>sim/multiplay/generic/int[19]</property>
        </or>
      </condition>
      <volume>
        <property>sim/multiplay/generic/float[13]</property>
        <type>log</type>
        <factor>0.18</factor>
	<min>0.0</min>
        <max>0.45</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>3000</max-dist>
    </rumble>

    <!-- Gear in and out -->
    
    <gear>
      <name>gear</name>
      <mode>in-transit</mode>
      <path>Aircraft/AN-12BK/Sounds/gear.wav</path>
      <property>gear/gear[0]/position-norm</property>
      <volume>
        <factor>0.4</factor>
      </volume>
      <reference-dist>500</reference-dist>
      <max-dist>2000</max-dist>
    </gear>

    <gear>
     <name>gear-lock</name>
     <path>Aircraft/AN-12BK/Sounds/gear-lck.wav</path>
     <condition>
       <greater-than>
         <property>gear/gear[0]/position-norm</property>
         <value>0.96</value>
       </greater-than>
     </condition>
     <volume>
       <property>sim/multiplay/generic/int[7]</property>
        <factor>0.4</factor>
      </volume>
      <reference-dist>500</reference-dist>
      <max-dist>2000</max-dist>
    </gear>

    <!-- Touchdown -->
    
    <squeal>
      <name>squeal1</name>
      <mode>once</mode>
      <path>Aircraft/AN-12BK/Sounds/squeal.wav</path>
      <condition>        
          <property>sim/multiplay/generic/int[18]</property>                 
      </condition>
        <volume>
	  <property>sim/multiplay/generic/int[7]</property>
        <factor>0.15</factor>
      </volume>
      <reference-dist>1000</reference-dist>
      <max-dist>5000</max-dist>
    </squeal>
    
    <squeal>
      <name>squeal2</name>
      <mode>once</mode>
      <path>Aircraft/AN-12BK/Sounds/squeal.wav</path>
      <condition>        
          <property>sim/multiplay/generic/int[19]</property>          
      </condition>
        <volume>
	  <property>sim/multiplay/generic/int[7]</property>
        <factor>0.15</factor>
      </volume>
      <reference-dist>1000</reference-dist>
      <max-dist>5000</max-dist>
    </squeal>
 
 <!-- Flaps -->
 
    <flap>
      <name>flaps</name>
      <mode>in-transit</mode>
      <path>Aircraft/AN-12BK/Sounds/flaps.wav</path>
      <property>surface-positions/flap-pos-norm</property>
      <volume>
        <factor>0.15</factor>
      </volume>
      <reference-dist>500</reference-dist>
      <max-dist>2000</max-dist>
    </flap>
    
  <!-- Doors -->
  
    <door>
      <name>Crew doorT</name>
      <mode>in-transit</mode>
      <path>Aircraft/AN-12BK/Sounds/door_close.wav</path>
      <condition>
       <and>
	<greater-than>
          <property>sim/multiplay/generic/float[0]</property>
          <value>0.01</value>
        </greater-than>
	<less-than>
          <property>sim/multiplay/generic/float[0]</property>
          <value>0.99</value>
        </less-than>
       </and>
      </condition>
      <volume>
        <factor>0.05</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>2000</max-dist>
    </door>
    
    <door>
      <name>Crew door</name>
      <path>Aircraft/AN-12BK/Sounds/door_closed.wav</path>
      <condition>
        <equals>
          <property>sim/multiplay/generic/float[0]</property>
          <value>0.0</value>
        </equals>
      </condition>
      <volume>
	<property>sim/multiplay/generic/int[7]</property>
        <factor>0.05</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>2000</max-dist>
    </door>

    <door>
      <name>Passenger doorT</name>
      <mode>in-transit</mode>
      <path>Aircraft/AN-12BK/Sounds/door_close.wav</path>
      <condition>
       <and>
	<greater-than>
          <property>sim/multiplay/generic/float[12]</property>
          <value>0.01</value>
        </greater-than>
	<less-than>
          <property>sim/multiplay/generic/float[12]</property>
          <value>0.99</value>
        </less-than>
       </and>
      </condition>
      <volume>
        <factor>0.05</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>2000</max-dist>
    </door>
    
    <door>
      <name>Passenger door</name>
      <path>Aircraft/AN-12BK/Sounds/door_closed.wav</path>
      <condition>
        <equals>
          <property>sim/multiplay/generic/float[12]</property>
          <value>0.0</value>
        </equals>
      </condition>
      <volume>
	<property>sim/multiplay/generic/int[7]</property>
        <factor>0.05</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>2000</max-dist>
    </door>

  </fx>

</PropertyList>
