      <mode>looped</mode>
      <path>Aircraft/AN-12BK/Sounds/Antonov12ULTIMATE-running-01rechts.wav</path>      
        <condition>       
         <property>sim/multiplay/generic/int[15]</property>         
        </condition>  
      <volume>
        <property>engines/engine[3]/rpm</property>
        <factor>0.000328</factor>
        <min>0.18</min>
