<PropertyList>

  <fx>

  <!-- Engines 1 -4 starting up-->
    <crank>
      <name>engstart1</name>
      <path>Aircraft/AN-12BK/Sounds/starter.wav</path>
       <condition>       
         <property>sim/multiplay/generic/int[12]</property>         
        </condition>      
      <volume>
        <offset>-0.45</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>500</max-dist>
    </crank>
    
    <crank>
      <name>engstart2</name>
      <path>Aircraft/AN-12BK/Sounds/starter.wav</path>
       <condition>       
         <property>sim/multiplay/generic/int[13]</property>         
        </condition>      
      <volume>
        <offset>-0.45</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>500</max-dist>
      <delay-sec>0</delay-sec>
    </crank>
    
    <crank>
      <name>engstart3</name>
      <path>Aircraft/AN-12BK/Sounds/starter.wav</path>
       <condition>       
         <property>sim/multiplay/generic/int[14]</property>         
        </condition>      
      <volume>
        <offset>-0.45</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>500</max-dist>
      <delay-sec>0</delay-sec>
    </crank>
    
    <crank>
      <name>engstart4</name>
      <path>Aircraft/AN-12BK/Sounds/starter.wav</path>
       <condition>       
         <property>sim/multiplay/generic/int[15]</property>         
        </condition>      
      <volume>
        <offset>-0.45</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>500</max-dist>
      <delay-sec>0</delay-sec>
    </crank>
  
  <!-- Engines 1 -4 running -->

    <engine>
       <name>engine0</name>
      <mode>looped</mode>
      <path>Aircraft/AN-12BK/Sounds/Antonov12ULTIMATE-running-01links.wav</path>      
        <condition>       
         <property>sim/multiplay/generic/int[12]</property>         
        </condition>  
      <volume>
        <property>engines/engine[0]/rpm</property>
        <factor>0.000328</factor>
        <min>0.18</min>
        <max>1.0</max>        
      </volume>
      <position>
        <x>-1.95</x>
        <y>-9.57</y>
        <z>-1.57</z>
      </position>
      <orientation>
         <x> 1 </x>
         <y> 0 </y>
         <z> 0 </z>
         <inner-angle>160</inner-angle>
         <outer-angle>200</outer-angle>
         <outer-gain>0.7</outer-gain>
      </orientation>
      <reference-dist>100</reference-dist>
      <max-dist>22000</max-dist>
      <delay-sec>17</delay-sec>
    </engine>
    
    <engine>
       <name>engine1</name>
      <mode>looped</mode>
      <path>Aircraft/AN-12BK/Sounds/Antonov12ULTIMATE-running-01links.wav</path>      
