<!-- Skawk control
3D instrument for Tu-154 -->

<PropertyList>

<path>skawk.ac</path>


  <animation>
    <object-name>base</object-name>
    <object-name>text</object-name>
    <object-name>handle_1</object-name>
    <object-name>handle_2</object-name>
    <object-name>handle_3</object-name>
    <object-name>handle_4</object-name>
    <object-name>handle_5</object-name>    
  </animation>

  <animation>
    <type>material</type>
     <object-name>base</object-name>
     <object-name>text</object-name>     
     <object-name>handle_1</object-name>
     <object-name>handle_2</object-name>
     <object-name>handle_3</object-name>
     <object-name>handle_4</object-name>
     <object-name>handle_5</object-name> 
    <emission>
      <factor-prop>tu154/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>


<animation>
  <type>knob</type>
  <object-name>handle_1</object-name>
  <property>tu154/instrumentation/skawk/handle-1</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-90.0</dep></entry>
    <entry><ind>	7.0</ind>	<dep>	120.0</dep></entry>
  </interpolation>
  <visible>true</visible>
  <action>
    <binding>
      <command>property-adjust</command>
      <property>tu154/instrumentation/skawk/handle-1</property>
      <min>0</min>
      <max>7</max>
    </binding>
  </action>
  <center>
    <x-m>0.0</x-m>
    <y-m>-0.057232</y-m>
    <z-m>-0.028</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>knob</type>
  <object-name>handle_2</object-name>
  <property>tu154/instrumentation/skawk/handle-2</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-120.0</dep></entry>
    <entry><ind>	7.0</ind>	<dep>	90.0</dep></entry>
  </interpolation>
  <action>
    <binding>
      <command>property-adjust</command>
      <property>tu154/instrumentation/skawk/handle-2</property>
      <min>0</min>
      <max>7</max>
    </binding>
  </action>
  <center>
    <x-m>0.0</x-m>
    <y-m>-0.020602</y-m>
    <z-m>-0.03234</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>knob</type>
  <object-name>handle_3</object-name>
  <property>tu154/instrumentation/skawk/handle-3</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-90.0</dep></entry>
    <entry><ind>	7.0</ind>	<dep>	120.0</dep></entry>
  </interpolation>
  <action>
    <binding>
      <command>property-adjust</command>
      <property>tu154/instrumentation/skawk/handle-3</property>
      <min>0</min>
      <max>7</max>
    </binding>
  </action>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.016865</y-m>
    <z-m>-0.03234</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>knob</type>
  <object-name>handle_4</object-name>
  <property>tu154/instrumentation/skawk/handle-4</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-120.0</dep></entry>
    <entry><ind>	7.0</ind>	<dep>	90.0</dep></entry>
  </interpolation>
  <action>
    <binding>
      <command>property-adjust</command>
      <property>tu154/instrumentation/skawk/handle-4</property>
      <min>0</min>
      <max>7</max>
    </binding>
  </action>
  

  <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>squawk-code</tooltip-id>
      <label>Transponder code: %s</label>
      <property>tu154/instrumentation/skawk/handle-4</property>
      <mapping>nasal</mapping>
      <script>
        var modes = ['0', '1', '2', '3', '4', '5', '6', '7'];
        return modes[arg[0]];
      </script>
    </binding>
  </hovered>
  
  <center>
    <x-m>0.0</x-m>
    <y-m>0.053828</y-m>
    <z-m>-0.028</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>knob</type>
  <object-name>handle_5</object-name>
  <property>tu154/instrumentation/skawk/handle-5</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-120.0</dep></entry>
    <entry><ind>	7.0</ind>	<dep>	90.0</dep></entry>
  </interpolation>
  <action>
    <binding>
      <command>property-adjust</command>
      <property>tu154/instrumentation/skawk/handle-5</property>
      <min>0</min>
      <max>3</max>
    </binding>
  </action>
  <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>squawk-mode</tooltip-id>
      <label>Transponder mode: %s</label>
      <property>tu154/instrumentation/skawk/handle-5</property>
      <mapping>nasal</mapping>
      <script>
        var modes = ['on', 'standby', 'altitude', 'ground'];
        return modes[arg[0]];
      </script>
    </binding>
  </hovered>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0072</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

</PropertyList>
