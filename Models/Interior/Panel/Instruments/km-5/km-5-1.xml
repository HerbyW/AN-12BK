<!-- KM-5 gauge from TKS compass system
3D instrument for Tu-154 -->

<PropertyList>
  
 <path>km-5.ac</path>
 
<!-- Internal instruments lighting -->

<animation>
  <type>material</type>
  <object-name>text</object-name>
  <object-name>needle</object-name>
  <object-name>index</object-name>  
</animation>


  <!-- working for Rembrandt -->
  

  <animation>
    <type>material</type>
     <object-name>text</object-name>
     <object-name>needle</object-name>
     <object-name>index</object-name>  
    <emission>
      <factor-prop>tu154/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>

  
<!--Needles-->
<animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>fdm/jsbsim/instrumentation/km-5-magvar-1</property>
    <axis>
      <x>1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>index</object-name>
  <property>fdm/jsbsim/instrumentation/km-5-1</property>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>pick</type>
  <object-name>hs</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <interval-sec>0.15</interval-sec>
    <binding>
      <command>property-adjust</command>
      <property>fdm/jsbsim/instrumentation/km-5-magvar-1</property>
      <step>0.5</step>
      <min>-180.0</min>
      <max>180.0</max>
      <wrap>false</wrap>
    </binding>
    <binding>
      <command>nasal</command>
      <script>help.km();</script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hs</object-name>
  <visible>false</visible>
  <action>
    <button>1</button>
    <repeatable>true</repeatable>
    <interval-sec>0.15</interval-sec>
    <binding>
      <command>property-adjust</command>
      <property>fdm/jsbsim/instrumentation/km-5-magvar-1</property>
      <step>-0.5</step>
      <min>-180.0</min>
      <max>180.0</max>
      <wrap>false</wrap>
    </binding>
    <binding>
      <command>nasal</command>
      <script>help.km();</script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hs</object-name>
  <visible>false</visible>
  <action>
    <button>3</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-adjust</command>
      <property>fdm/jsbsim/instrumentation/km-5-magvar-1</property>
      <step>0.5</step>
      <min>-180.0</min>
      <max>180.0</max>
      <wrap>false</wrap>
    </binding>
    <binding>
      <command>nasal</command>
      <script>help.km();</script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hs</object-name>
  <visible>false</visible>
  <action>
    <button>4</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-adjust</command>
      <property>fdm/jsbsim/instrumentation/km-5-magvar-1</property>
      <step>-0.5</step>
      <min>-180.0</min>
      <max>180.0</max>
      <wrap>false</wrap>
    </binding>
    <binding>
      <command>nasal</command>
      <script>help.km();</script>
    </binding>
  </action>
</animation>


</PropertyList>
