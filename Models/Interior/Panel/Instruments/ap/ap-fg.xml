<PropertyList>
    <path>ap-fg.ac</path>

    <animation>
      <type>material</type>
      <object-name>bg</object-name>
      <emission>
          <red>0.3</red>
          <green>0.3</green>
          <blue>0.3</blue>
          <factor-prop>tu154/switches/gauge-light</factor-prop>
      </emission>
    </animation>
    
  <animation>
		<type>material</type>
        <object-name>altOn</object-name>
        <object-name>apOn</object-name>
        <object-name>apprOn</object-name>
        <object-name>hdgOn</object-name>
        <object-name>iasOn</object-name>
        <object-name>navOn</object-name>
        <object-name>apprOn</object-name>
        <object-name>gpsOn</object-name>
        <object-name>pitchOn</object-name>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
		</emission>
	</animation>

  <animation>
		<type>material</type>
        <object-name>altOn</object-name>
        <object-name>apOn</object-name>
        <object-name>apprOn</object-name>
        <object-name>hdgOn</object-name>
        <object-name>iasOn</object-name>
        <object-name>navOn</object-name>
        <object-name>apprOn</object-name>
        <object-name>gpsOn</object-name>
        <object-name>pitchOn</object-name>
        <object-name>altOff</object-name>
        <object-name>apOff</object-name>
        <object-name>apprOff</object-name>
        <object-name>hdgOff</object-name>
        <object-name>iasOff</object-name>
        <object-name>navOff</object-name>
        <object-name>apprOff</object-name>
        <object-name>gpsOff</object-name>
        <object-name>pitchOff</object-name>
		<condition>
			<less-than><property>tu154/switches/gauge-light</property><value>1</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>tu154/switches/gauge-light</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
        <object-name>altOn</object-name>
        <object-name>apOn</object-name>
        <object-name>apprOn</object-name>
        <object-name>hdgOn</object-name>
        <object-name>iasOn</object-name>
        <object-name>navOn</object-name>
        <object-name>apprOn</object-name>
        <object-name>gpsOn</object-name>
        <object-name>pitchOn</object-name>
        <object-name>altOff</object-name>
        <object-name>apOff</object-name>
        <object-name>apprOff</object-name>
        <object-name>hdgOff</object-name>
        <object-name>iasOff</object-name>
        <object-name>navOff</object-name>
        <object-name>apprOff</object-name>
        <object-name>gpsOff</object-name>
        <object-name>pitchOff</object-name>
				<object-name>shadow</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>tu154/switches/gauge-light</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>tu154/switches/gauge-light</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>noshadow</type>
		<object-name>shadow</object-name>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>shadow</object-name>
	</effect>

    <animation>
        <type>select</type>
        <object-name>altOn</object-name>
        <object-name>apOn</object-name>
        <object-name>apprOn</object-name>
        <object-name>hdgOn</object-name>
        <object-name>iasOn</object-name>
        <object-name>navOn</object-name>        
        <object-name>gpsOn</object-name>
        <object-name>pitchOn</object-name>
        <condition>
        	<greater-than>
		 <property>tu154/switches/gauge-light</property>
		 <value>0.5</value>
		</greater-than>
      	
        </condition>
    </animation>

    <!--################  buttons on the ap-console #################### -->
    <!-- Main Switch AP -->
    <animation>
        <type>select</type>
        <object-name>apOff</object-name>
        <condition>
        	<and>
		        <equals>
		          <property>/autopilot/locks/altitude</property>
		          <value type="string"></value>
		        </equals>
		        <equals>
		          <property>/autopilot/locks/heading</property>
		          <value type="string"></value>
		        </equals>
		        <equals>
		          <property>/autopilot/locks/speed</property>
		          <value type="string"></value>
		        </equals> 
          </and>
        </condition>
    </animation>

    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>apOff</object-name>
        <action>
            <button>0</button>
				  <binding>
				    <command>property-assign</command>
				    <property>/autopilot/locks/speed</property>
				    <value>0</value>
				  </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>apOn</object-name>
        <action>
            <button>0</button>
				  <binding>
				    <command>property-assign</command>
				    <property>/autopilot/locks/speed</property>
				    <value>1</value>
				  </binding>
        </action>
    </animation>


    <!-- Heading Hold -->
    <animation>
        <type>select</type>
        <object-name>hdgOff</object-name>
        <condition>
        	
        	  <not>
				      <equals>
				        <property>/autopilot/locks/heading</property>
				        <value type="string">dg-heading-hold</value>
				      </equals>
				    </not>       
		        
        </condition>
    </animation>

    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>hdgOff</object-name>
        <action>
            <button>0</button>
            <binding>
              <command>property-assign</command>
              <property>/autopilot/locks/heading</property>
              <value>1</value>
	    </binding>
            <binding>
              <command>property-toggle</command>
              <property>/autopilot/locks/heading</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>hdgOn</object-name>
        <action>
            <button>0</button>
            <binding>
              <command>property-assign</command>
              <property>/autopilot/locks/heading</property>
              <value>2</value>
            </binding>
            
        </action>
    </animation>

    <!-- Altitude Hold -->
    <animation>
        <type>select</type>
        <object-name>altOff</object-name>
        <condition>
        	<and>
      	  	<not>
				      <equals>
				        <property>/autopilot/locks/altitude</property>
				        <value type="string">altitude-hold</value>
				      </equals>
				    </not>      
		        
            	<property>tu154/switches/gauge-light</property>

          </and>
        </condition>
    </animation>

    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>altOff</object-name>
        <action>
            <button>0</button>
						<binding>
						  <command>property-assign</command>
						  <property>/autopilot/locks/altitude</property>
						  <value>1</value>
						</binding> 

            <binding>
              <command>property-toggle</command>
              <property>/autopilot/locks/altitude</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>altOn</object-name>
        <action>
            <button>0</button>
						<binding>
						  <command>property-assign</command>
						  <property>/autopilot/locks/altitude</property>
						  <value>0</value>
						</binding> 

            <binding>
              <command>property-toggle</command>
              <property>/autopilot/locks/altitude</property>
            </binding>
        </action>
    </animation>

    <!-- IAS Hold -->
    <animation>
        <type>select</type>
        <object-name>iasOff</object-name>
        <condition>
        	<and>
      	  	<not>
				      <equals>
				        <property>/autopilot/locks/speed</property>
				        <value type="string">speed-with-throttle</value>
				      </equals>
				    </not>           
        
            	<property>tu154/switches/gauge-light</property>
          	
          </and>
        </condition>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>iasOff</object-name>
        <property>/autopilot/locks/speed</property>
        <factor>-0.004</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>iasOff</object-name>
        <action>
            <button>0</button>
            <binding>
              <command>property-assign</command>
              <property>/autopilot/locks/speed</property>
              <value type="string">speed-with-throttle</value>
            </binding>
                                                
            <binding>
              <command>property-toggle</command>
              <property>/autopilot/locks/speed</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>iasOn</object-name>
        <action>
            <button>0</button>
            <binding>
              <command>property-assign</command>
              <property>/autopilot/locks/speed</property>
              <value type="string"></value>
            </binding>
            
        </action>
    </animation>

    <!-- GPS follow -->
    <animation>
        <type>select</type>
        <object-name>gpsOff</object-name>
        <condition>
        	<and>
        		<not>
				      <equals>
				        <property>/autopilot/locks/heading</property>
				        <value type="string">true-heading-hold</value>
				      </equals>
				    </not>       
            	<property>tu154/switches/gauge-light</property>
          	
          </and>
        </condition>
    </animation>

    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>gpsOff</object-name>
        <action>
            <button>0</button>
            <binding>
              <command>property-assign</command>
              <property>/autopilot/locks/heading</property>
              <value>0</value>
            </binding>

            <binding>
              <command>property-toggle</command>
              <property>/autopilot/locks/heading</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>gpsOn</object-name>
        <action>
            <button>0</button>
            <binding>
              <command>property-assign</command>
              <property>/autopilot/locks/heading</property>
              <value>2</value>
            </binding>
            
        </action>
    </animation>

    <!-- Pitch Hold -->
    <animation>
        <type>select</type>
        <object-name>pitchOff</object-name>
        <condition>
        	<and>
                   <not>
		          <equals>
		          	<property>/autopilot/locks/altitude</property>
		          	<value type="string">vertical-speed-hold</value>
		          </equals>
		    </not>        
		        
            	<property>tu154/switches/gauge-light</property>
          	
          </and>
        </condition>
    </animation>

    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>pitchOff</object-name>
        <action>
            <button>0</button>
            <binding>
              <command>property-assign</command>
              <property>/autopilot/locks/altitude</property>
              <value type="string">vertical-speed-hold</value>
            </binding>
                                                 
            <binding>
              <command>property-toggle</command>
              <property>/autopilot/locks/altitude</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>pitchOn</object-name>
        <action>
            <button>0</button>
            <binding>
              <command>property-assign</command>
              <property>/autopilot/locks/altitude</property>
              <value type="string"></value>
            </binding>
            
        </action>
    </animation>

    <!-- NAV1 Hold -->
    <animation>
        <type>select</type>
        <object-name>navOff</object-name>
        <condition>
        	<and>
        		<not>
		          <equals>
		          	<property>/autopilot/locks/heading</property>
		          	<value type="string">nav1-hold</value>
		          </equals>
				    </not>        
        
            	<property>tu154/switches/gauge-light</property>
          	
          </and>
        </condition>
    </animation>

    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>navOff</object-name>
        <action>
            <button>0</button>
            <binding>
              <command>property-assign</command>
              <property>/autopilot/locks/heading</property>
              <value>3</value>
            </binding>

            <binding>
              <command>property-toggle</command>
              <property>/autopilot/locks/heading</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>navOn</object-name>
        <action>
            <button>0</button>
            <binding>
              <command>property-assign</command>
              <property>/autopilot/locks/heading</property>
              <value type="string"></value>
            </binding>
            
        </action>
    </animation>

    <!-- Approach / Glideslope -->
    <animation>
        <type>select</type>
        <object-name>apprOff</object-name>
        <condition>
          <and>
        		<not>
		          <equals>
		          	<property>/autopilot/locks/altitude</property>
		          	<value type="string">gs1-hold</value>
		          </equals>
				    </not>        
        
            	<property>tu154/switches/gauge-light</property>
          	
          </and>
        </condition>
    </animation>

    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>apprOff</object-name>
        <action>
            <button>0</button>
            <binding>
              <command>property-assign</command>
              <property>/autopilot/locks/altitude</property>
              <value>4</value>
            </binding>

            <binding>
              <command>property-toggle</command>
              <property>/autopilot/locks/altitude</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>apprOn</object-name>
        <action>
            <button>0</button>
            <binding>
              <command>property-assign</command>
              <property>/autopilot/locks/altitude</property>
              <value type="string"></value>
            </binding>
            
        </action>
    </animation>
</PropertyList>
