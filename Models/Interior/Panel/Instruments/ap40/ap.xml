<PropertyList>
 <path>ap.ac</path>
 
<!-- Internal instruments lighting--> 

<animation>  
  <object-name>power_sw</object-name>
  <object-name>pitch_sw</object-name>
  <object-name>bg</object-name> 
</animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>vitre</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>power_sw</object-name>
    <object-name>pitch_sw</object-name>
    <object-name>bg</object-name> 
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.25 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>


<!--Switches-->
<animation>
    <type>rotate</type>
    <object-name>power_sw</object-name>
    <property>switches/ap_on</property>
    <interpolation>
      <entry><ind>0</ind>	<dep>-35.0</dep></entry>
      <entry><ind>1</ind>	<dep>35.0</dep></entry>
     </interpolation>
    <axis>
      <x>-0.0043</x>
      <y>-0.07589</y>
      <z>0.00469</z>
    </axis>
</animation>

<!-- ******************** pick staff ******************************* -->
<animation>
	<type>pick</type>
	<object-name>power_sw</object-name>
	<visible>true</visible>
	<action>
		<button>3</button>
		<repeatable>false</repeatable>
		<binding>
			<command>nasal</command>
			<script>
			setprop("switches/ap_on", 1);
			</script>
		</binding>
	</action>
</animation>

<animation>
	<type>pick</type>
	<object-name>power_sw</object-name>
	<visible>true</visible>
	<action>
		<button>4</button>
		<repeatable>false</repeatable>
		<binding>
			<command>nasal</command>
			<script>
			setprop("switches/ap_on", 0);
			</script>
		</binding>
	</action>
</animation>

<animation>
	<type>pick</type>
	<object-name>power_sw</object-name>
	<visible>true</visible>
	<action>
		<button>0</button>
		<repeatable>false</repeatable>
		<binding>
			<command>nasal</command>
			<script>
			if (getprop("switches/ap_on")==0) {setprop("switches/ap_on", 1);} else {setprop("switches/ap_on", 0);}
			</script>
		</binding>
	</action>
</animation>

<animation>
    <type>rotate</type>
    <object-name>pitch_sw</object-name>
    <property>switches/pitch_on</property>
    <interpolation>
      <entry><ind>0</ind>	<dep>-35.0</dep></entry>
      <entry><ind>1</ind>	<dep>35.0</dep></entry>
     </interpolation>
    <axis>
      <x>-0.0043</x>
      <y>0.0771</y>
      <z>0.00469</z>
    </axis>
</animation>

<animation>
	<type>pick</type>
	<object-name>pitch_sw</object-name>
	<visible>true</visible>
	<action>
		<button>3</button>
		<repeatable>false</repeatable>
		<binding>
			<command>nasal</command>
			<script>
			setprop("switches/pitch_on", 1);
			</script>
		</binding>
	</action>
</animation>

<animation>
	<type>pick</type>
	<object-name>pitch_sw</object-name>
	<visible>true</visible>
	<action>
		<button>4</button>
		<repeatable>false</repeatable>
		<binding>
			<command>nasal</command>
			<script>
			setprop("switches/pitch_on", 0);
			</script>
		</binding>
	</action>
</animation>

<animation>
	<type>pick</type>
	<object-name>pitch_sw</object-name>
	<visible>true</visible>
	<action>
		<button>0</button>
		<repeatable>false</repeatable>
		<binding>
			<command>nasal</command>
			<script>
			if (getprop("switches/pitch_on")==0) {setprop("switches/pitch_on", 1);} else {setprop("switches/pitch_on", 0);}
			</script>
		</binding>
	</action>
</animation>
<!--Lamp-->
<!--Ready Lamp--> 
<animation>
  <type>material</type>
  <object-name>ready_btn</object-name>
  <emission>
    <red>1</red>
    <green>1</green>
    <blue>1</blue>
    <factor-prop>instrumentation/ap40/serviceable</factor-prop>
 </emission>
</animation>



<!--On-->
<!--Pick-->
<animation>
  <type>pick</type>
  <object-name>online_btn</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        instruments.ap_online();
	interpolate("instrumentation/ap40/online-btn",1,0.1);
      </script>
    </binding>
    <mod-up>
      <binding>
	<command>nasal</command>
	<script>
          interpolate("instrumentation/ap40/online-btn",0,0.1);
        </script>
      </binding>
    </mod-up>  
  </action>
</animation>

<animation>
    <type>translate</type>
    <object-name>online_btn</object-name>
    <property>instrumentation/ap40/online-btn</property>
    <interpolation>
      <entry><ind>      0.0</ind>      <dep>   0.0</dep></entry>
      <entry><ind>      1.0</ind>      <dep>   -0.0014</dep></entry>
    </interpolation>
    <axis>
      <x>1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>
