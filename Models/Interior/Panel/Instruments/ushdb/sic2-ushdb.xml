<!--ADF/VOR indicator USHDB
3D instrument for Tu-154 -->
<PropertyList>
 <path>ushdb.ac</path>
<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>base</object-name>
  <object-name>txt1</object-name>
  <object-name>txt2</object-name>
  <object-name>txt3</object-name>
  <object-name>compass</object-name>
  <object-name>needle_1</object-name>
  <object-name>needle_2</object-name>
  <emission>
      <factor-prop>tu154/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
</animation>

<!--Compass-->
<animation>
  <type>rotate</type>
  <object-name>compass</object-name>
  <property>tu154/instrumentation/ushdb/compass</property>
  <value>0</value>
  <axis>
   <x>-1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
</animation>


<!--Needles-->
<animation>
    <type>rotate</type>
    <object-name>needle_1</object-name>
    <property>instrumentation/adf[0]/indicated-bearing-deg</property>
     <condition>
      <equals>
       <property>tu154/switches/ushdb-sel-1</property>
       <value>0</value>
      </equals>
     </condition>    
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<animation>
    <type>rotate</type>
    <object-name>needle_1</object-name>
    <property>instrumentation/nav[0]/radials/reciprocal-radial-deg</property>
     <condition>
      <equals>
       <property>tu154/switches/ushdb-sel-1</property>
       <value>1</value>
      </equals>
     </condition>    
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<animation>
    <type>rotate</type>
    <object-name>needle_2</object-name>
    <property>instrumentation/adf[1]/indicated-bearing-deg</property>
     <condition>
      <equals>
       <property>tu154/switches/ushdb-sel-2</property>
       <value>0</value>
      </equals>
     </condition>    
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<animation>
    <type>rotate</type>
    <object-name>needle_2</object-name>
    <property>instrumentation/nav[1]/radials/reciprocal-radial-deg</property>
     <condition>
      <equals>
       <property>tu154/switches/ushdb-sel-2</property>
       <value>1</value>
      </equals>
     </condition>    
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>


<!-- Controls -->

<animation>
  <type>knob</type>
  <object-name>hs</object-name>
  <visible>false</visible>
  <action>
    <binding>
      <command>property-adjust</command>
      <property>tu154/instrumentation/ushdb/compass</property>
      <min>0</min>
      <max>360</max>
      <wrap>true</wrap>
    </binding>
  </action>
</animation>


</PropertyList>


