<PropertyList>
 <path>fuel1_knob.ac</path>

 
   <!--Lights-->
                                   
 <animation>   
   <object-name>group</object-name>
   <object-name>k1</object-name>   
 </animation>


  <!-- working for Rembrandt -->
  

  <animation>
    <type>material</type>
    <object-name>group</object-name>
   <object-name>k1</object-name> 
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>

 
 <animation>
  <type>rotate</type>
  <object-name>k1</object-name>
  <property>controls/switches/fuel</property>  
  <interpolation>
   <entry><ind>  0</ind><dep> 3</dep></entry> 
   <entry><ind> 1</ind><dep> 27</dep></entry>
   <entry><ind> 2</ind><dep> 69</dep></entry>
   <entry><ind> 3</ind><dep> 92</dep></entry>

  </interpolation>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
 
 
 <animation>
  <type>pick</type> 
  <object-name>k1</object-name> 
  <action>
  <button>3</button> 
  <repeatable>true/</repeatable> 
  <interval-sec>0.2</interval-sec>
  
  <binding>
  <command>property-adjust</command> 
  <property>controls/switches/fuel</property>  
  <step>-1</step>
  <min>0</min>
  <max>3</max> 
   </binding>
  
   <binding>
  <command>property-adjust</command> 
  <property>consumables/fuel/tank[0]/selected</property>  
  <step>-1</step>
  <min>0</min>
  <max>3</max> 
   </binding>
   
   <binding>
  <command>property-adjust</command>  
  <property>consumables/fuel/tank[1]/selected</property>  
  <step>-1</step>
  <min>0</min>
  <max>3</max> 
   </binding>
   
   <binding>
  <command>property-adjust</command>  
  <property>consumables/fuel/tank[2]/selected</property>
  <step>-1</step>
  <min>0</min>
  <max>3</max> 
   </binding>
   
   <binding>
  <command>property-adjust</command>   
  <property>consumables/fuel/tank[3]/selected</property>
  <step>-1</step>
  <min>0</min>
  <max>3</max> 
   </binding>
   
  </action>
  </animation>
  
   <animation>
  <type>pick</type> 
  <object-name>k1</object-name> 
  <action>
  <button>4</button> 
  <repeatable>true/</repeatable> 
  <interval-sec>0.2</interval-sec>
  
  <binding>
  <command>property-adjust</command> 
  <property>controls/switches/fuel</property>  
  <step>1</step>
  <min>0</min>
  <max>3</max> 
   </binding>
  
   <binding>
  <command>property-adjust</command> 
  <property>consumables/fuel/tank[0]/selected</property>  
  <step>1</step>
  <min>0</min>
  <max>3</max> 
   </binding>
   
   <binding>
  <command>property-adjust</command>  
  <property>consumables/fuel/tank[1]/selected</property>  
  <step>1</step>
  <min>0</min>
  <max>3</max> 
   </binding>
   
   <binding>
  <command>property-adjust</command>  
  <property>consumables/fuel/tank[2]/selected</property>
  <step>1</step>
  <min>0</min>
  <max>3</max> 
   </binding>
   
   <binding>
  <command>property-adjust</command>   
  <property>consumables/fuel/tank[3]/selected</property>
  <step>1</step>
  <min>0</min>
  <max>3</max> 
   </binding>
   
  </action>
  </animation>

</PropertyList>

