<PropertyList>
 <path>var-30.ac</path>

 <!-- Internal instruments lighting -->

 <animation>
    <object-name>base</object-name>    
    <object-name>needle</object-name>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>vitre</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>base</object-name>    
    <object-name>needle</object-name>
    <emission>
      <factor-prop>tu154/switches/gauge-light</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

<!--Needles-->
<animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
    <interpolation>
  	<entry><ind>	5708.66</ind>	<dep>	177.0</dep></entry>
	<entry><ind>	3937.0</ind>	<dep>	142.0</dep></entry>
	<entry><ind>	1968.5</ind>	<dep>	83.0</dep></entry>
	<entry><ind>	984.25</ind>	<dep>	44.0</dep></entry>
	<entry><ind>	0.0</ind>	<dep>	0.0</dep></entry>
        <entry><ind>	-984.25</ind>	<dep>	-44.0</dep></entry>
        <entry><ind>	-1968.5</ind>	<dep>	-83.0</dep></entry>
        <entry><ind>	-3937.0</ind>	<dep>	-142.0</dep></entry>
        <entry><ind>	-5708.66</ind>	<dep>	-177.0</dep></entry>
    </interpolation>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>



</PropertyList>
